<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.First.Calculator" >

    <RelativeLayout android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
    <LinearLayout android:id="@+id/ll0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        
    <TextView android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="@string/cal"/>
       </LinearLayout>
    
    <LinearLayout android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ll0" >
        
        <EditText android:id="@+id/textbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="number"/>
        <requestFocus/>
   </LinearLayout>

    <LinearLayout android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        
       <Button android:id="@+id/seven"
           android:layout_height="60dp"
           android:layout_width="60dp"
           android:text="@string/seven"
           android:textSize="30sp"
           android:paddingTop="14dp"
           android:paddingStart="20dp"
           android:layout_marginEnd="10dp"
           android:background="@drawable/bg4"
           android:gravity="start"/>
       
       <Button android:id="@+id/eight"
           android:layout_height="60dp"
           android:layout_width="60dp"
           android:text="@string/eight"
           android:textSize="30sp"
           android:paddingTop="14dp"
           android:background="@drawable/bg4"
           android:layout_marginEnd="10dp"
           android:gravity="center_horizontal"/>"
       
       <Button android:id="@+id/nine"
           android:layout_height="60dp"
           android:layout_width="60dp"
           android:paddingTop="14dp"
           android:text="@string/nine"
           android:background="@drawable/bg4"
           android:textSize="30sp"
           android:paddingEnd="20dp"
           android:gravity="end"/>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/ll3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        
       <Button android:id="@+id/four"
           android:layout_height="60dp"
           android:layout_width="60dp"
           android:text="@string/four"
           android:textSize="30sp"
           android:paddingTop="14dp"
           android:paddingStart="20dp"
           android:layout_marginEnd="10dp"
           android:background="@drawable/bg4"
           android:gravity="start"/>
       
       <Button android:id="@+id/five"
           android:layout_height="60dp"
           android:layout_width="60dp"
           android:text="@string/five"
           android:textSize="30sp"
           android:paddingTop="14dp"
           android:background="@drawable/bg4"
           android:layout_marginEnd="10dp"
           android:gravity="center_horizontal"/>
       
       <Button android:id="@+id/six"
           android:layout_height="60dp"
           android:layout_width="60dp"
           android:paddingTop="14dp"
           android:text="@string/six"
           android:background="@drawable/bg4"
           android:textSize="30sp"
           android:paddingEnd="20dp"
           android:gravity="end"/>
    </LinearLayout>
    
        
    <LinearLayout android:id="@+id/ll4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll3"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        
       <Button android:id="@+id/one"
           android:layout_height="60dp"
           android:layout_width="60dp"
           android:text="@string/one"
           android:textSize="30sp"
           android:paddingTop="14dp"
           android:paddingStart="20dp"
           android:layout_marginEnd="10dp"
           android:background="@drawable/bg4"
           android:gravity="start"/>
       
       <Button android:id="@+id/two"
           android:layout_height="60dp"
           android:layout_width="60dp"
           android:text="@string/two"
           android:textSize="30sp"
           android:paddingTop="14dp"
           android:background="@drawable/bg4"
           android:layout_marginEnd="10dp"
           android:gravity="center_horizontal"/>
       
       <Button android:id="@+id/three"
           android:layout_height="60dp"
           android:layout_width="60dp"
           android:paddingTop="14dp"
           android:text="@string/three"
           android:background="@drawable/bg4"
           android:textSize="30sp"
           android:paddingEnd="20dp"
           android:gravity="end"/>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/ll5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ll2"
        android:layout_below="@+id/ll1"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        
       <Button android:id="@+id/divide"
           android:layout_height="60dp"
           android:layout_width="60dp"
           android:text="@string/divide"
           android:textSize="30sp"
           android:paddingTop="14dp"
           android:paddingStart="20dp"
           android:layout_marginEnd="10dp"
           android:background="@drawable/bg4"
           android:layout_marginBottom="20dp"
           android:gravity="start"/>
       
       <Button android:id="@+id/multiply"
           android:layout_height="60dp"
           android:layout_width="60dp"
           android:text="@string/multiply"
           android:textSize="30sp"
           android:paddingTop="14dp"
           android:background="@drawable/bg4"
           android:layout_marginBottom="20dp"
           android:layout_marginEnd="10dp"
           android:gravity="center_horizontal"/>

       <Button
           android:id="@+id/subtract"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/bg4"
           android:gravity="end"
           android:paddingEnd="20dp"
           android:paddingTop="14dp"
           android:layout_marginBottom="20dp"
           android:text="@string/subtract"
           android:textSize="30sp" />
       
       <Button
           android:id="@+id/add"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/bg4"
           android:gravity="end"
           android:paddingEnd="20dp"
           android:paddingTop="14dp"
           android:layout_marginBottom="20dp"
           android:text="@string/add"
           android:textSize="30sp" />
       
       <Button
           android:id="@+id/equal"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:background="@drawable/bg4"
           android:gravity="end"
           android:paddingEnd="20dp"
           android:paddingTop="14dp"
           android:text="@string/equal"
           android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ll4"
        android:layout_marginTop="22dp"
        android:layout_toStartOf="@+id/ll5"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/clear"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg4"
            android:paddingTop="14dp"
            android:text="@string/cl"
            android:textSize="30sp"
            android:layout_marginEnd="10dp" />
        
        <Button
            android:id="@+id/zero"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg4"
            android:gravity="center"
            android:paddingTop="14dp"
            android:text="@string/zero"
            android:textSize="30sp" />

        
    </LinearLayout>
    
</RelativeLayout>
</ScrollView>